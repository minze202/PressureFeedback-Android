<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Person A"
        android:gravity="center"
        android:ems="10"
        android:id="@+id/participantsName"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="@string/scan_for_device"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="goToScanDevices"/>

    <Button
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="@string/feedback_customization"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="goToAppConfiguration"/>

    <Button
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="@string/start_study"
        android:id="@+id/studyButton"
        android:layout_gravity="center_horizontal"
        android:onClick="startStudy"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_study_controlled"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="startStudyControlled"/>

</LinearLayout>